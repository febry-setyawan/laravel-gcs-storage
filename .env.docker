APP_FAKER_LOCALE=en_US

# Database Configuration for Docker
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel_gcs_storage
DB_USERNAME=laravel
DB_PASSWORD=secret

# Google Cloud Storage Configuration
# You need to set these values for GCS integration
GOOGLE_CLOUD_PROJECT_ID=gcs-demo-471614
GOOGLE_CLOUD_KEY_FILE=/var/www/html/storage/app/gcs-service-account.json
GOOGLE_CLOUD_STORAGE_BUCKET=gcs-laravel-bucket
GOOGLE_CLOUD_STORAGE_PATH_PREFIX=files/
GOOGLE_CLOUD_STORAGE_API_URI=https://storage.googleapis.com

# Cache and Session
CACHE_STORE=redis
SESSION_DRIVER=redis
REDIS_HOST=redis
REDIS_PORT=6379

# Queue Configuration
QUEUE_CONNECTION=database

# Mail Configuration
MAIL_MAILER=log

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Session Configuration
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8000,127.0.0.1,127.0.0.1:8000,::1

# Docker specific ports
APP_PORT=8000
FORWARD_DB_PORT=3306
FORWARD_REDIS_PORT=6379
FORWARD_PHPMYADMIN_PORT=8080

# User/Group IDs for Docker
