APP_NAME="LaravelGCSStorage"
APP_ENV=local
APP_KEY=base64:15VtxlFNLZP/p7Uwr5l6P1PEqFfrMDri8ECJvkXSTm0=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

APP_LOCALE=en
